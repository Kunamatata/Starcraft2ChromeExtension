*
  box-sizing border-box


.stream
  display flex
  flex-flow column wrap
  justify-content center
  color #fff
  background  #2B2F38
  width 100%
  padding 5px
  margin 1px 0px

.favorite-star
  color white
  right 0
  margin-right 5px
  cursor pointer
  font-size 20px
  flex-basis auto
  &:hover
    color #f1c40f
  
.stream-logo
  width 50px
  height 50px
  display flex
  background-position center
  background-size cover
  right 0px
  top 12px

.stream-description
  width 80%

.race-image
  background-position center
  background-size contain
  background-repeat no-repeat
  height 35px
  width 35px  

a
  color #00b6ff
  font-weight bold
  text-decoration none
  &:visited
    color #00b6ff
  &:hover
    color #0288D1